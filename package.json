{
    "name": "@doist/twist-ai",
    "version": "2.0.0",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "mcpName": "net.twist/mcp",
    "bin": {
        "twist-ai": "dist/main.js"
    },
    "files": [
        "dist",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "license": "MIT",
    "description": "A collection of tools for Twist using AI",
    "author": "Doist",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Doist/twist-ai.git"
    },
    "keywords": [
        "twist",
        "ai",
        "mcp",
        "doist",
        "collaboration",
        "model-context-protocol"
    ],
    "scripts": {
        "test": "jest",
        "build": "rimraf dist && npx tsc --project tsconfig.json",
        "postbuild": "chmod +x dist/main.js",
        "start": "npm run build && npx @modelcontextprotocol/inspector node dist/main.js",
        "dev": "concurrently \"npx tsc --watch\" \"npx @modelcontextprotocol/inspector npx nodemon --quiet --watch dist --ext js --exec node dist/main.js\"",
        "type-check": "npx tsc --noEmit",
        "biome:sort-imports": "biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true --write .",
        "lint:check": "biome lint",
        "lint:write": "biome lint --write",
        "format:check": "biome format",
        "format:write": "biome format --write",
        "check": "biome check",
        "check:fix": "biome check --fix --unsafe"
    },
    "dependencies": {
        "@doist/twist-sdk": "1.0.3",
        "@modelcontextprotocol/sdk": "1.24.3",
        "dotenv": "17.2.3",
        "zod": "4.1.13"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@types/jest": "30.0.0",
        "@types/node": "22.19.2",
        "concurrently": "9.2.1",
        "jest": "30.2.0",
        "nodemon": "3.1.11",
        "rimraf": "6.1.2",
        "ts-jest": "29.4.6",
        "typescript": "5.9.3"
    }
}
